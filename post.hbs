</div> <!-- /meta-hold --> --}}




{{! Everything inside the #author tags pulls data from the author }}
{{#author}}

<div class="author-wrap">
  {{#if profile_image}}
    <span class="author-avatar"><img class="author-thumb" src="{{profile_image}}" alt="{{name}} image" nopin="nopin" /></span>
  {{/if}}
  <div class="author-bio">
      <h6><span>Post by</span> <a href="{{url}}">{{name}}</a></h6>
      {{#if bio}}
          <p>{{bio}}</p>
      {{/if}}
    </div>
</div>

{{/author}}



</div> <!-- post-inner -->




    </article>

    <div class="post-navigation">




  {{#prev_post}}

    <article class="single-post-nav previous-post-link" {{#if feature_image}} style="background-image: url({{feature_image}})"{{/if}}>
  		<a href="{{url}}">
  			<div class="nav-inner">
  				<h4 class="entry-title">{{{title}}}</h4>
  				<p>{{excerpt words="5"}}&hellip;</p>
          <!-- Author not supported in Ghost 0.6.4 but will be in 0.7
          {{#if author}}
