{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}



<section class="main">

    <article class="{{post_class}}">
    {{! Everything inside the #post tags pulls data from the post }}
    {{#post}}


    <div class="post-top">

      {{#if feature_image}}

        <span class="featured-image with-image"><img src="{{feature_image}}" alt="{{title}}" /></span>

      {{else}}

        <span class="featured-image not-post-image">{{content words="0"}}</span>

      {{/if}}

    <div class="post-align post-header">
			<div class="post-header-inner">
				<ul class="meta top">
		      <li class="time">
			     <time class="post-date updated" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time></li>
	    </ul>
			<h1 class="entry-title post-title">{{title}}</h1>
		<ul class="meta">
  		<li class="author-meta post-tags">
  			<div class="author-avatar avatar-small">{{#if author.profile_image}}<img class="author-thumb" src="{{author.profile_image}}" alt="Author image" nopin="nopin" />{{/if}}</div>
        <div class="author-byline">Post by  <span class="vcard author post-author"><span class="fn">{{author}}</span></span></div>
  		</li>
	  </ul>
		</div><!-- /post-header-inner -->
		</div><!-- /post-header -->
	</div><!-- /post-top -->


        <div class="inner post-inner">
            {{content}}



  <div class="meta-hold">

{{!--   {{#if tags}}
    <ul class="meta bottom">
  			<li class="tag post-tags">Tagged: {{tags separator=", "}}</li>
  	</ul>
  {{/if}} --}}

<div class="meta bottom">

  {{!--Begin MailChimp Signup Form --}}

